                @Html.EditorFor(model => model.BudgetActualCustomer.Actual, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BudgetActualCustomer.Actual, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sale Closed" class="btn btn-default" />
            </div>
        </div>
    </div>
}

