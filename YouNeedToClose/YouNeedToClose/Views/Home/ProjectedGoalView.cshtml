@model DataAccess.Models.ProjectedGoalModel

@{
    ViewBag.Title = "ProjectedGoalView";
}

<h2>Projected Goal For Month</h2>
<h4>Input how much money you realistically expect to make per month on average</h4>
<h5>This amount will automatically be carried over to each month</h5>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.ExpectedAmountToEarn, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ExpectedAmountToEarn, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ExpectedAmountToEarn, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Month Overview", "MonthOverview")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}